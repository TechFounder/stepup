<%= simple_form_for(@mentor, :html => { :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company_name %>
    <%= f.input :job_title %>
    <%= f.input :sector %>
    <%= f.input :college %>
    <%= f.input :skill_set %>
    <%= f.input :additional_info %>
    <%= f.input :internship_available %><strong style="display:inline-block">Internship Available</strong>
    <%= f.input :internship_job_title %>
    <%= f.input :internship_skill_set %>
    <%= f.input :internship_additional_info %>
    <%= f.file_field :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
