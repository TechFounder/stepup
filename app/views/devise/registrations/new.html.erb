<div class="panel panel-default center-block">
<div class="panel-heading">Step Up Women's Network Sign up</div>
<div class="panel-body">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-info">
      <h4><%= pluralize(resource.errors.count, "error") %> prohibited this page from being saved:</h4>
        <ul>
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div><%= f.text_field :name, :autofocus => true, placeholder: "Enter Name" %></div>
  <br />

  <div><%= f.email_field :email, placeholder: "Enter Email" %></div>
  <br />

  <% if f.object.password_required? %>
    <div>
    <%= f.password_field :password, placeholder: "Password" %></div>
    <br />

    <div>
    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %></div>
    <br />
  <% end %>
  <br />
  <div><%= f.submit "Sign up", class: "btn btn-primary btn-sm" %></div>
<% end %>


<%= render "devise/shared/links" %>
